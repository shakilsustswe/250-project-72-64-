<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shakilsustswe.locationtracker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/loc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LocationTracker">
        <activity android:name=".AboutThis"
            android:parentActivityName=".HomePage"
            ></activity>
        <activity android:name=".MyfriendList"
            android:parentActivityName=".HomePage"
            />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".ViewFriendActivity" />
        <activity android:name=".MessageActivity"
            android:parentActivityName=".HomePage"
            />
        <activity android:name=".FindFriendActivity"
            android:parentActivityName=".HomePage"
            /> <!-- <activity android:name=".EmergencyHelp"> -->
        <activity android:name=".HomePage" />
        <activity android:name=".Alluserslist" />
        <activity android:name=".SettingActivity" /> <!-- <activity android:name=".UserAdapter"></activity> -->
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>